<h1>New Recipe</h1>
<%= form_for :recipes, url: recipe_path do |f| %>
    <p>
        <h3>Submitted by: </h3>
        <%= f.text_field :user, :maxlength => 50, :size => 60, :value => current_user.name %>
    </p>
    
     <p>
         <h3>Category</h1>
         <%= f.select :prime, options_for_select([['Breakfast', 1], ['Lunch', 2], ['Diner', 3], ['Dessert', 4], ['Drink', 5]]) %>
     </p>
     
      <p>
        <h4><%= f.label :name %></h4>
        <%= f.text_field :name, :maxlength => 40, :size => 60 %>
      </p>
      
      <p>
          <h4>Prep Time</h4>
          <%= f.text_field :prep, placeholder: "5 minutes"%>
      </p>
     
     <p>
         <h4>Time to Complete</h4>
         <%= f.text_field :complete, placeholder: "45 minutes" %>
     </p>
     
      <p>
        <%= f.label :ingredients %><br>
        <%= f.text_area :ingredients, cols: "60", rows: "10"%>
      </p>
     
       <p>
        <%= f.label :directions %><br>
        <%= f.text_area :directions, cols: "60", rows: "10" %>
      </p>
      
      <p>
          <%= f.select :secondary, options_for_select([['Gluten-free', 1],
          ['Lactose-free', 2], ['Vegan', 3], ['Vegetarian', 4], 
          ['Low Calorie', 5], ['Low Fat', 6], ['Diabetic', 7], ['Slow Cooker']]) %>
      </p>
      
      <p>
        <%= f.submit %>
      </p>
    <% end %>