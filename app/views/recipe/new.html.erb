<h2>Add a new Recipe</h2>
<%= form_for :recipe, url: recipes_path do |f| %>
    <p>
        <strong><%= f.label (:title, "Recipe Name") %> </strong><br>
        <%= f.string :title %>
    </p>
    <p>
        <strong><%= f.label :ingredients %> </strong><br>
        <%= f.text_area :ingredients %>
    </p>
    <p>
        <strong><%= f.label :directions %></strong> <br>
        <%= f.text_area :directions %>
    </p>
    <p>
        <button> Breakfast </button>
        <button> Lunch </button>
        <button> Dinner </button>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>