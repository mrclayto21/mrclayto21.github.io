<div class="body1">
    <div id="recipeform">
      <div id="centerRecipe">
      <h2>Add a Recipe</h2>
      <%= form_for :recipe do |f| %>
     <p>
       <select>
         <option value="1">Breakfast</option>
         <option value="2">Lunch</option>
         <option value="3">Dinner</option>
         <option value="4">Dessert</option>
         <option value="5">Drink</option>
       </select>
     </p>
     
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title, :maxlength => 40, :size => 60 %>
      </p>
     
      <p>
        <%= f.label :ingredients %><br>
        <%= f.text_area :text, cols: "60", rows: "10"%>
      </p>
     
       <p>
        <%= f.label :directions %><br>
        <%= f.text_area :text, cols: "60", rows: "10" %>
      </p>
      <p>
        <select multiple>
          <option value="6">Vegetarian</option>
          <option value="7">Lactose-free</option>
          <option value="8">Under 600 calories</option>
          <option value="9">Spicy</option>
        </select>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
    </div>
  </div>
